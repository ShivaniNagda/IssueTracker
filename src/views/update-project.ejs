
<div class="container mb-5 p-5 rounded border border-info-subtle bg-primary-subtle update-project"
    style="padding-left: 5%; padding-right: 5%;">
    <h3 class="mt-2 mb-2 text text-center"><span class="bg-primary border border-light rounded-pill  text-light p-2">Update New Project</span></h3>
    <% if(errorMessage) { %>
    
    <div class="alert alert-danger" role="alert">
        <%=errorMessage%>
    </div>
    <%}%>
    <form class="row g-2 text-light" action="/update-project" method="post">
        <input type="hidden" class="form-control" name="_id" id="_id" value="<%= project._id %>">
        <div class="col-md-6">
            <label for="_projectname" class="form-label text-dark fw-bold" >Project Name</label>
            <input type="text" class="form-control" id="projectName"
                name="_projectname" value="<%= project._projectname %>">
        </div>

        <div class="col-12">
            <label for="_desc" class="form-label text-dark fw-bold" >Project Description</label>
            <textarea class="form-control" id="projectDesc" name="_desc"
                rows="3"><%= project._desc %></textarea>
        </div>

        <div class="col-md-6 ">
            <label for="_author" class="form-label text-dark fw-bold" >Author</label>
            <input type="text" class="form-control" id="author" name="_author" value="<%= project._author %>">
        </div>

        <div class="col-md-4">
            <label for="_priority" class="form-label text-dark fw-bold" >Priority</label>
            <select id="priority" name="_priority" class="form-select" value="<%= project._priority %>">
                <option selected>Choose...</option>
                <option value="High">High</option>
                <option value="Medium">Medium</option>
                <option value="Low">Low</option>
            </select>
        </div>

        <div class="col-md-4">
            <label for="_status" class="form-label text-dark fw-bold">Status</label>
            <select id="status" name="_status" class="form-select" value="<%= project._status %>">
                <option selected>Choose...</option>
                <option value="Ongoing">Ongoing</option>
                <option value="Completed">Completed</option>
                <option value="On Hold">On Hold</option>
            </select>
        </div>

        <div class="col-md-2">
            <label for="_progress" class="form-label text-dark fw-bold">Progress (%)</label>
            <input type="number" class="form-control" id="progress"
                name="_progress" min="0" max="100" value="<%= project._progress %>">
        </div>

        <div class="col-12 ">
            <button type="submit" class="btn btn-primary">Update Project</button>
        </div>
    </form>
</div>